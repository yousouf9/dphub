extends ../layout

block content
    .container-fluid.p-4
        .px-md-5.pt-4
            .container.px-md-5.pb-md-5.form-section.text-center(style='background-color:#eef2f9;')
                h4.font-weight-bold.pt-3.text-dark SUPPORT DPHUB
                .p-md-4
                    .info.text-center(style='background-color:#f2f9ee;')
                        p.p-0.m-0 Displaced persons never chose to be victims
                        p.p-0.m-0 but conflicts and disaster forced it on them.
                        p.p-0.m-0 You and I can make a difference in their lives.
                        p.p-0.m-0 Let's restore their dignity and hope
                        p.p-0.m-0 By making a donation today
                form.px-md-4(method='post' name="internship")
                    .p-3.bg-white.rounded
                        h2.text-center.text-muted DONATION INFORMATION
                        .form-group
                            label.m-0(for="first_name") 
                            input.form-control.form-control-sm(type='text'  name="first_name" placeholder="* FIRST NANE" required)
                        .form-group
                            label.m-0(for="last_name") 
                            input.form-control.form-control-sm(type='text'  name="last_name" placeholder="* LAST NAME" required)
                        .form-group
                            label.m-0(for="address") 
                            input.form-control.form-control-sm(type='text'  name="address" placeholder="* ADDRESS" required)
                        .form-group
                            label.m-0(for="city") 
                            input.form-control.form-control-sm(type='text'  name="city" placeholder="* CITY" required)
                        .form-group
                            label.m-0(for="state") 
                            input.form-control.form-control-sm(type='text'  name="state" placeholder="* STATE" required)
                        .form-group
                            label.m-0(for="zip") 
                            input.form-control.form-control-sm(type='number'  name="zip" placeholder="* ZIP" required)
                        .form-group
                            label.m-0(for="country") 
                            input.form-control.form-control-sm(type='text'  name="country" placeholder="* COUNTRY" required)
                        .form-group
                            label.m-0(for="phone") 
                            input.form-control.form-control-sm(type='text'  name="phone" placeholder="* PHONE NUMBER" required)
                        .form-group
                            label.m-0(for="email") 
                            input.form-control.form-control-sm(type='email'  name="email" placeholder="* EMAIL" required)
                        .form-group
                            label.m-0(for="program_name") 
                            input.form-control.form-control-sm(type='text'  name="program_name" placeholder="* NAME OF PROGRAM ( IF APPLICABLE)")
                        .form-group
                            label.m-0(for="comment") 
                            input.form-control.form-control-sm(type='text'  name="comment" placeholder="* COMMENT")
                        .form-group
                            label.m-0(for="volunteer_name") 
                            input.form-control.form-control-sm(type='text'  name="volunteer_name" placeholder="* NAME OF VOLUNTEER IN WHOSE HONOR YOU ARE DONATING" required)
                        .form-group
                            label.m-0(for="anonymours") 
                            input.form-control.form-control-sm(type='text'  name="anonymours" placeholder="* ANONYMOURS DONATION" required)
                    .d-flex.justify-content-start.mt-2
                        table.table.table-borderless.m-0
                            tbody
                                tr
                                    th.pb-0(scope='row') 
                                        p.m-0.bg-white.rounded(class="label-title") DONATION TYPE
                                    td.pb-0
                                        .custom-control.custom-radio.custom-control-inline
                                            input#once.custom-control-input(type='radio' name='donate')
                                            label.custom-control-label(for='once') ONE TIME
                                        .custom-control.custom-radio.custom-control-inline
                                            input#recurring.custom-control-input(type='radio' name='donate')
                                            label.custom-control-label(for='recurring') RECURRING
                    .form-row
                        .col-sm-6.px-3
                            label.m-0(for="amount") 
                            input.form-control.form-control-sm(type='number'  name="amount" placeholder="AMOUNT â‚¦" required)
                    .form-group.row.no-gutters.pt-3
                        label.col-sm-4.col-form-label.text-left.pl-3 VERIFICATION CODE
                        .col-sm-4
                            input#inputEmail3.form-control(type='text' name="verification_code")
                    .px-3
                        input.btn.btn-block.btn-success.m-3(type='submit' name="submit" value='Donate' )